<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5sp">

    <ImageView
        android:id="@+id/invited_player_profile"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/guest" />

    <TextView
        android:id="@+id/invited_player_displayName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="10sp"
        android:layout_toEndOf="@+id/invited_player_profile"
        android:fontFamily="@font/aclonica"
        android:paddingStart="10sp"
        android:paddingEnd="10sp"
        android:text="Player Name"
        android:textColor="@color/black"
        android:textSize="17sp" />

    <Button
        android:id="@+id/invited_player_play"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/delete_player_invite"
        android:text="PLAY"
        android:textColor="@color/white"
        android:textSize="12sp" />

    <ImageButton
        android:id="@+id/delete_player_invite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:layout_marginStart="8sp"
        android:layout_marginLeft="8sp"
        android:layout_marginEnd="16sp"
        android:layout_marginRight="16sp"
        app:srcCompat="@drawable/ic_close" />

</RelativeLayout>